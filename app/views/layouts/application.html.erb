<!DOCTYPE html>
<html>
<head>
  <title>LacerMarket</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href='https://fonts.googleapis.com/css?family=Raleway:400,700' rel='stylesheet' type='text/css'>  <!-- aggiunto da google font -->
</head>
<body>

<%= render "layouts/header" %>
 
<!-- <p class="notice"><%#= notice %></p> -->
<!-- <p class="alert"><%#= alert %></p> -->
<div class="container">
	<%flash.each do |type,message| %>
	<script>
		 Materialize.toast('<%= message %>', 4000)
	</script>
	<% end %>
</div>

<%= render 'pages/slider' if action_name == 'home'%>


<main class="container">  <!-- messo per css footer fisso in basso-->
  <%= yield %>
</main>

<%= render "layouts/footer" %>

</body>

<script>
  $(".button-collapse").sideNav();	
</script>

</html>

